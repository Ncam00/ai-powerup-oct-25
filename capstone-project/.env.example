# Environment Variables
# ======================

# REQUIRED
OPENAI_API_KEY=your-openai-api-key-here

# API Configuration
API_TOKEN=dev-token-change-in-production
REQUIRE_AUTH=false
ENVIRONMENT=development

# Optional - Voice Features
ELEVENLABS_API_KEY=
ELEVENLABS_VOICE_ID=

# Database (if using)
DATABASE_URL=sqlite:///./learning_platform.db

# RAG Configuration
VECTOR_STORE_PATH=./knowledge_base/embeddings
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
MAX_RETRIEVAL_RESULTS=5

# Code Execution
CODE_TIMEOUT_SECONDS=5
MAX_CODE_LENGTH=10000

# Agent Configuration
MAX_AGENT_ITERATIONS=10
AGENT_TEMPERATURE=0.7

# Model Selection
OPENAI_MODEL=gpt-4
